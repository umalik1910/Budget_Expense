@model IEnumerable<final_budget_expense.Models.BudgetRecord>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
   
</p>
<table class="table">
    <tr>

        <th>
            Date
        </th>
        <th>
            Type
        </th>
        <th>
            Description
        </th>
        <th>
            Amount
        </th>
    </tr>

    @foreach (var item in Model.Where(x => x.DateOfTrans.Month == DateTime.Now.Month))
    {
<tr>
    <td>
        @Html.Raw(item.DateOfTrans.ToString("d"))
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TypeOfTrans)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TransDescription)
    </td>
    <td>
        $@Html.DisplayFor(modelItem => item.Amount)
    </td>
    
</tr>
    }
<th>
    Total: $@calcTotal()
</th>
    

</table>

@functions
{

public double calcTotal() { 
double total = 0;
foreach (var item in Model)
{
    
    double amount = 0;
    if (item.TypeOfTrans == "Expense")
    {
        amount = item.Amount * -1;
        total += amount;
    }
    else if (item.TypeOfTrans == "Income")
    {
        amount = item.Amount;
        total += amount;
    }
}
return total; 
}
}
